# Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=True

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# Voice Activity Detection (VAD) Configuration
# VAD_THRESHOLD: Minimum energy level to detect voice (0-32768, default: 500)
# Higher values = less sensitive, fewer false positives
VAD_THRESHOLD=500

# VAD_HANGOVER_FRAMES: Number of silent frames to allow before ending speech
# Each frame â‰ˆ 20ms, so 15 frames = ~300ms of silence tolerance
# Increase this to allow natural pauses in speech (recommended: 15-25)
VAD_HANGOVER_FRAMES=15

# WebSocket Configuration
WS_PING_INTERVAL=10
WS_PING_TIMEOUT=5

# Additional Environment Variables
# Add any additional configuration variables your application needs below